<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="320.0"
  xmlns="http://javafx.com/javafx/17" fx:controller="org.example.EditController">
  <children>
    <Button layoutX="268.0" layoutY="1.0" mnemonicParsing="false" onAction="#speak" text="Speak"/>
    <HBox alignment="CENTER_RIGHT" layoutY="360.0" prefHeight="40.0" prefWidth="320.0">
      <children>
        <Button mnemonicParsing="false" onAction="#cancel" prefHeight="20.0" prefWidth="55.0"
          text="Cancel">
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#delete" prefHeight="20.0" prefWidth="50.0"
          text="Delete" fx:id="deleteButton">
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#save" prefHeight="20.0" prefWidth="50.0"
          text="Save" fx:id="saveButton">
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
        </Button>
      </children>
    </HBox>
    <TextArea prefHeight="360.0" prefWidth="320.0" wrapText="true" fx:id="editDefinitionText">
      <cursor>
        <Cursor fx:constant="TEXT"/>
      </cursor>
    </TextArea>
  </children>
</AnchorPane>
